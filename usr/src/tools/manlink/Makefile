PROG	= manlink
OBJS	= manlink.o

include	$(SRC)/tools/Makefile.tools
include	$(SRC)/cmd/Makefile.ctf

CSTD	= $(CSTD_GNU99)

all: $(PROG)

.KEEP_STATE:

install: all $(ROOTONBLDMACHPROG)

$(PROG): $(OBJS)
	$(LINK.c) -o $@ $(OBJS) $(LDLIBS)
	$(POST_PROCESS)

%.o: %.c
	$(COMPILE.c) $<
	$(POST_PROCESS_O)

clean:
	$(RM) $(OBJS)

include	$(SRC)/tools/Makefile.targ

.DONE:
	@$(MAKE_GITIGNORE) $(CLOBBERFILES) $(OBJS) $(PROG)
